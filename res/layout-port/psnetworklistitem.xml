<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout	xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:paddingTop="7sp"
				android:paddingBottom="7sp"
				android:paddingLeft="15sp"
				android:paddingRight="15sp">

	<ImageView	android:id="@+id/NetworkIcon" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerVertical="true" />
				
	<TextView 	android:id="@+id/NetworkName"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_toRightOf="@id/NetworkIcon"
				android:layout_centerVertical="true"
				android:paddingLeft="10sp" />
				
	<ToggleButton android:id="@+id/NetworkButton"
				android:layout_height="wrap_content"
				android:layout_width="94sp"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:button="@drawable/togglebuttons"
				android:background="@drawable/nullimg" />

</RelativeLayout>